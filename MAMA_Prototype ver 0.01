/*
 * --------------------------------------------------------------------------------------------------------------------
 * Example to change UID of changeable MIFARE card.
 * --------------------------------------------------------------------------------------------------------------------
 * This is a MFRC522 library example; for further details and other examples see: https://github.com/miguelbalboa/rfid
 * 
 * This sample shows how to set the UID on a UID changeable MIFARE card.
 * NOTE: for more informations read the README.rst
 * 
 * @author Tom Clement
 * @license Released into the public domain.
 *
 * Typical pin layout used:
 * -----------------------------------------------------------------------------------------
 *             MFRC522      Arduino       Arduino   Arduino    Arduino          Arduino
 *             Reader/PCD   Uno/101       Mega      Nano v3    Leonardo/Micro   Pro Micro
 * Signal      Pin          Pin           Pin       Pin        Pin              Pin
 * -----------------------------------------------------------------------------------------
 * RST/Reset   RST          9             5         D9         RESET/ICSP-5     RST
 * SPI SS      SDA(SS)      10            53        D10        10               10
 * SPI MOSI    MOSI         11 / ICSP-4   51        D11        ICSP-4           16
 * SPI MISO    MISO         12 / ICSPEMPTY   50        D12        ICSPEMPTY           14
 * SPI SCK     SCK          13 / ICSP-3   52        D13        ICSP-3           15
 */

#include <SPI.h>
#include <MFRC522.h>
#include <MFRC522Hack.h>
#include <Keypad.h>
#include <MemoryFree.h>
#define EMPTY 255 // 255 == -1

// 1: 1번 저장소 이용, 2: 2번 저장소 .... 6: write mode toggle (default -readmode) 7: setting init
constexpr uint8_t RST_PIN = 9;     // Configurable, see typical pin layout above
constexpr uint8_t SS_PIN = 10;     // Configurable, see typical pin layout above

MFRC522 mfrc522(SS_PIN, RST_PIN);  // Create MFRC522 instance.
MFRC522Hack mfrc522Hack(&mfrc522);  // Create MFRC522Hack instance.


/* Set your new UID here! */
byte newUid[5][4] = {{0x00, 0x00, 0x00, 0x00}, {0x00, 0x00, 0x00, 0x00},{0x00, 0x00, 0x00, 0x00},{0x00, 0x00, 0x00, 0x00},{0x00, 0x00, 0x00, 0x00}};
byte select = 0;
byte selectNum = EMPTY;
bool powerStatus = true; // 전원상태 표시
bool writeMode = true; // writeMode 인지 상태 확인 (false 일때는 readMode, true일 때는 writeMode) 기본값은 읽기모드로.
MFRC522::MIFARE_Key key;

//--------------------keypad 설정 ---------------------
const byte ROWS = 4;    // 행(rows) 개수    // 열(columns) 개수
char keys[ROWS] = {2,1,4,3};

byte rowPins[ROWS] = {4, 5, 6, 7};   // R1, R2, R3, R4 단자가 연결된 아두이노 핀 번호
// C1, C2, C3, C4 단자가 연결된 아두이노 핀 번호

Keypad keypad = Keypad( makeKeymap(keys), rowPins, {}, ROWS, 1 );

int speakerpin = 3; 

void setup() {
  Serial.begin(9600);  // Initialize serial communications with the PC
  while (!Serial);     // Do nothing if no serial port is opened (added for Arduinos based on ATMEGA32U4)
  SPI.begin();         // Init SPI bus
  
  mfrc522.PCD_Init();  // Init MFRC522 card
  Serial.println(F("Warning: this example overwrites the UID of your UID changeable card, use with care!"));
  Serial.println(F("please touch the card that you are going to copy"));
  
  // Prepare key - all keys are set to FFFFFFFFFFFFh at chip delivery from the factory.
  
  for (byte i = 0; i < 6; i++) {
    key.keyByte[i] = 0xFF;
  }
}

// UID읽기
void readUID(){
  
  for (byte i = 0; i < mfrc522.uid.size; ++i) {
    Serial.print(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " ");
    
    Serial.print(mfrc522.uid.uidByte[i],HEX);
    Serial.print(selectNum);
    newUid[selectNum][i] = mfrc522.uid.uidByte[i];
    // 선택한 곳에 저장하는 기능
  }
  delay(5000);
  Serial.println("뚜껑을 닫아주세요");

  writeMode = true;
  //writeUID();
  
}

// UID 쓰기
void writeUID(){
  
  if ( mfrc522Hack.MIFARE_SetUid(newUid[selectNum], (byte)4, true) ) {
    Serial.println(F("Wrote new UID to card."));
  }
  Serial.println("please touch the card that would be copied");
  selectNum=EMPTY;
}


//UID를 출력하는 함수
void printUIDS(){
  for(byte j = 0; j < 5; ++j){ 
      Serial.print(j+1);
      Serial.print("번째 저장소 : ");
          for (byte i = 0; i < mfrc522.uid.size; ++i) {
            Serial.print(newUid[j][i]);
            Serial.print(" ");
          }
          Serial.println(); 
        }
      
}
void loop() {

byte keyNum = keypad.getKey();
if(keyNum == 0){}else{
  selectNum = keyNum;
  Serial.print(freeMemory());
  }

   

  if(selectNum == EMPTY){
    // 선택된 수가 -1 이면
     Serial.print(F("값을 입력해 주세요:\n"));
  }
  else{
    // 아니면 Serial.read(); 에서 받아온 char 값에서 '0'을 빼면 숫자로 전환 가능
     byte temp =  keypad.getKey();
     if(Serial.read() == 7){
        
        // 선택된 수를 -1로 전환
        printUIDS();
     }
     
     if(keyNum == 4){
      Serial.println("sibal writeMode");
      writeMode = !writeMode; // write 모드에서 read모드로 readMode에서 write모드로 전환
      selectNum = EMPTY;
      return;
    }
      
    Serial.println(selectNum);
    Serial.print("writeMode:");
    Serial.println(writeMode);
  }

  if(keyNum == 4){
    tone(speakerpin,500,100); 
    //delay(500);
    //tone(speakerpin,500,100); 
  }else if(keyNum == 0){
    
  }else{
    tone(speakerpin,500,100); 
    }
  
  if(Serial.available()){
    if(selectNum == EMPTY){
      
      select = Serial.read()-'0';
      keyNum = keypad.getKey();
      if(keyNum != 0){
        selectNum = keyNum;
        }
    }
    if(select == 7){
      printUIDS();
     selectNum = EMPTY;  // 출력
     return;
    }
    if(selectNum == 8){
      for(byte j = 0; j < 5; ++j){ 
      
          for (byte i = 0; i < mfrc522.uid.size; ++i) {
            newUid[j][i] = 0;
           
          }
          Serial.println(); 
        }
      
    }
    if(selectNum == 4){
      Serial.println("sibal writeMode");
      writeMode = !writeMode; // write 모드에서 read모드로 readMode에서 write모드로 전환
      selectNum = EMPTY;
      if(selectNum == 0){   /////////////////////
       Serial.println("Error");
       }
      return;
    }
    else{
      delay(50);
      --selectNum;   //예상 포인트  
    }
  }
  
    // Look for new cards, and select one if present
    if ( ! mfrc522.PICC_IsNewCardPresent() || ! mfrc522.PICC_ReadCardSerial() ) {
      delay(50);
      return;
    }
    
    // Now a card is selected. The UID and SAK is in mfrc522.uid.
    
    // readmode
    Serial.print(F("Card UID:"));
    if(selectNum > 0 && selectNum<4){
      // 0<selectNum < 5일 때
      // 1~3
      if(writeMode){
        // UID를 쓰기
        writeUID();
      }
      else{
        // UID를 읽기
        readUID();
      }
      delay(5000);
    }else{

      Serial.println(writeMode);
      Serial.println(selectNum);
      Serial.println(keyNum); 
      }
 
    
    // Set new UID
    // Halt PICC and re-select it so DumpToSerial doesn't get confused
    mfrc522.PICC_HaltA();
    if ( ! mfrc522.PICC_IsNewCardPresent() || ! mfrc522.PICC_ReadCardSerial() ) {
      return;
    }
    
    // Dump the new memory contents
    Serial.println(F("New UID and contents:"));
    //mfrc522.PICC_DumpToSerial(&(mfrc522.uid));
  delay(2000);
  
  Serial.println();
}
